# pnpm configuration for Booker monorepo
# https://pnpm.io/npmrc

# Registry configuration
registry=https://registry.npmjs.org/
strict-ssl=true

# pnpm specific settings
# Link workspace packages
link-workspace-packages=true

# Auto install peer dependencies
auto-install-peers=true

# Use shamefully-hoist for better compatibility with tools that don't support pnpm's strict node_modules structure
# Set to false for stricter dependency management
shamefully-hoist=false

# Hoist all dependencies to node_modules/.pnpm
hoist=true

# Shared lockfile for the entire workspace
shared-workspace-lockfile=true

# Save exact versions instead of ranges
save-exact=false

# Engine strict - fail if node version doesn't match
engine-strict=true

# Public hoist pattern - packages that need to be hoisted to root
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=@types/*
