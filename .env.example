# ===========================================
# CloudVault Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# App
NODE_ENV=development
API_PORT=4000

# Database (Neon PostgreSQL)
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/cloudvault?sslmode=require"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_EXPIRES_IN=15m

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# AWS S3
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=cloudvault-files

# Cloudflare (optional)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Frontend
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# Note: Make sure to add FRONTEND_URL to your .env file

